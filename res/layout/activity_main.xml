<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android1:onClick="dumpVol"
    tools:context=".MainActivity" >

    <ScrollView
        android1:id="@+id/scrollView1"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >
        <TableLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_weight="1" >

            <TableRow
                android1:id="@+id/tableRow1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android1:id="@+id/tableRow2"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >

                <Button
                    android1:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android1:layout_width="wrap_content"
                    android1:layout_height="match_parent"
                    android1:layout_weight="1"
                    android1:onClick="dump_vol"
                    android1:text="Dump Vol" />

                <Button
                    android1:id="@+id/button5"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:onClick="dump_all"
                    android1:text="dump All" />

            </TableRow>

            <TableRow
                android1:id="@+id/tableRow3"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >

                <Button
                    android1:id="@+id/button3"
                    android1:layout_width="wrap_content"
                    android1:layout_height="match_parent"
                    android1:layout_weight="1"
                    android1:onClick="dump_don"
                    android1:text="dump_don" />

                <Button
                    android1:id="@+id/button4"
                    android1:layout_width="wrap_content"
                    android1:layout_height="match_parent"
                    android1:layout_weight="1"
                    android1:onClick="dump_pledge"
                    android1:text="dump_pledge" />
            </TableRow>

            <TableRow
                android1:id="@+id/tableRow4"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >

                <Button
                    android1:id="@+id/button1"
                    style="?android:attr/buttonStyleSmall"
                    android1:layout_width="98dp"
                    android1:layout_height="match_parent"
                    android1:onClick="addVolunteer"
                    android1:text="Add Volunteer" />

            </TableRow>
        </TableLayout>

        <Spinner
            android1:id="@+id/spinnerRole"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:layout_weight="1"
            android1:entries="@array/ROLES" />
            
            <EditText
                android1:id="@+id/editTextName"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:layout_marginTop="17dp"
                android1:layout_weight="1"
                android1:ems="10"
                android1:hint="Volunteer&apos;s Name"
                android1:inputType="textPersonName" />

            <EditText
                android1:id="@+id/editTextPhone"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:layout_weight="1"
                android1:ems="10"
                android1:hint="Volunteers Phone Number"
                android1:inputType="phone" />

            <EditText
                android1:id="@+id/editTextLimit"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:layout_weight="1"
                android1:ems="10"
                android1:hint="Limit"
                android1:inputType="numberDecimal" />

            <EditText
                android1:id="@+id/editTextID"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:layout_weight="1"
                android1:ems="10"
                android1:hint="ID Number" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>